<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
               android:interpolator="@android:interpolator/anticipate_overshoot"
               android:transitionOrdering="together">


    <targets >
        <target android:excludeId="@id/bingo_image" android:targetId="@id/bingo_image" />
        <target android:excludeId="@id/bingo_text" android:targetId="@id/toolbar_title" />
    </targets>
    <changeTransform  android:duration="500"/>

    <changeImageTransform android:duration="500" />

    <changeBounds
                  android:duration="500"/>

    <explode
        android:duration="500"
        android:interpolator="@android:interpolator/accelerate_cubic" />


</transitionSet>